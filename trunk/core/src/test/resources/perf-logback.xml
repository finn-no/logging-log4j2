<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>perftest.log</file>
    <append>false</append>
    <encoder>
      <pattern>%d %p %c{1} [%t] %X{aKey} %m %ex%n</pattern>
      <immediateFlush>false</immediateFlush>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="FILE" />
  </root>
</configuration>